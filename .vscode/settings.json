{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "cSpell.words": [
    "clsx",
    "tailwindcss",
    "tsup"
  ],
  "tailwindCSS.classAttributes": [
    ".*ClassName.*",
    ".*ClassNames.*",
    ".*classNames.*",
    ".*variants.*",
    ".*Variants.*",
    // ".*CLASS.*",
  ],

  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cn\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["classNames\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ]
}